{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('css/login.css') }}" rel="stylesheet"/>
{% endblock %}
    
{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="wrapper fadeInDown loginContainer">
        <div id="formContent">
            <!-- Icon -->
            <div class="fadeIn first">
                <font-awesome-icon class ="mt-3 mb-3" icon="home" size="lg"/>
                <i class="fas fa-home"></i>
            </div>

            <!-- Login Form -->
            <form action="{{ path('loginPage') }}" class="mt-5" method= "POST">
                <input  type="text" id="login" class="fadeIn second" name="_username" placeholder="Email">
                <input type="password" id="password" class="fadeIn third" name="_password" placeholder="Mot de passe">
                <input type="submit" class="fadeIn fourth" value="S'identifier">
            </form>

            <!-- Remind Password -->
            <div id="formFooter">
                <span class="underlineHover mr-4"><a href="{{ path('creationAccountPage') }}">Créer un compte</a></span>
                <span class="underlineHover mr-4"><a href="#">Mot de passe oublié ?</a></span>
            </div>
        </div>
    </div>

{% endblock %}